<%- include("partials/header") -%>

<h1>Home</h1>
<p><%- post1 %></p>
<% blogPosts.forEach(function(post){ %>
  <h1><%- post['title'] %></h1>
  <% if (post.body.length < 100){ %>
    <p><%- post['body'] %> <a href='/posts/<%- post['title']%>' >Read More</a></p>
  <% }else{ %>
    <% var body = post['body'].slice(0, 100) + ' ...';%>
    <p><%- body %> <a href='/posts/<%- post['title']%>' >Read More</a></p>
  <% }; %>
<% }); %>

<%- include("partials/footer") -%>
